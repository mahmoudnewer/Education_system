@model Education.ViewModel.User_ViewModel

@{
    Layout = "_UserLayoutcshtml";
    ViewData["Title"] = "Index";
}

<div class="myform form">
<div class="logo mb-3">
                         <div class="col-md-12 text-center">
                            <h1>Login</h1>
                         </div>
                    </div>
        <form asp-action="Login" name="login">

            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
            <input asp-for="Email"  class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email" required="required" />
             <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Password</label>
            <input asp-for="Password"  id="password" class="form-control" aria-describedby="emailHelp" placeholder="Enter Password" required="required" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-md-12 text-center ">
                              <input type="submit" value="Login" class=" btn btn-block mybtn btn-primary tx-tfm">
                           </div>
        </form>
    </div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
