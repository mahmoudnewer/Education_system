@model Education.ViewModel.RequestsViewModel;

@{
    ViewData["Title"] = "EditRequest";
}
<div class="main-panel">
    <h1>Edit Request</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditRequest" method="post" enctype="multipart/form-data">

                <div class="form-group">
                    <label asp-for="StudentName" class="control-label">Student Name</label>
                    <input asp-for="StudentName" class="form-control" />
                    <span asp-validation-for="StudentName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Image" class="control-label"></label>
                    <input type="file" accept="image/*" name="imageFile" id="imageFile" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <img class="rounded mb-3 " id="imgViewer" width="100" height="100" src="data:image/jpg;base64,@Convert.ToBase64String(Model?.Image != null ? Model?.Image : new byte[]{} )" />



                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>



<partial name="_ValidationScriptsPartial" />

@section Scripts{
    <script type="text/javascript">
        $("#imageFile").change(function (event) {

            console.log(document.getElementById("imgViewer"));

            var files = event.target.files;
            $("#imgViewer").attr("src", window.URL.createObjectURL(files[0]));
        });


    </script>


}
